---
version: v1alpha1
machine:
  ca:
    crt: {{ ENV.CERTS_OS_CRT }}
{% if ENV.IS_CONTROLLER | default(false) %}
    key: {{ ENV.CERTS_OS_KEY }}
{% endif %}
  certSANs: &certSANs
      - 127.0.0.1
      - 10.2.128.9
      - k8s.internal
      - k8s.ad.garagefarm.net
  network:
    extraHostEntries:
      - ip: 10.2.128.9
        aliases: ["k8s.internal"]
      - ip: 10.2.128.100
        aliases: ["ad01.lpo-lab.dev"]
  features:
    apidCheckExtKeyUsage: true
    diskQuotaSupport: true
    hostDNS:
      enabled: true
      forwardKubeDNSToHost: false
      resolveMemberNames: true
    kubePrism:
      enabled: true
      port: 7445
{% if ENV.IS_CONTROLLER | default(false) %}
    kubernetesTalosAPIAccess:
      allowedKubernetesNamespaces:
        - system-upgrade
      allowedRoles:
        - os:admin
      enabled: true
{% endif %}
    rbac: true
    stableHostname: true
  files:
    - op: create
      path: /etc/cri/conf.d/20-customization.part
      content: |
        [plugins."io.containerd.cri.v1.images"]
          discard_unpacked_layers = false
        [plugins."io.containerd.cri.v1.runtime"]
          cdi_spec_dirs = ["/var/cdi/static", "/var/cdi/dynamic"]
          device_ownership_from_security_context = true
    - op: overwrite
      path: /etc/nfsmount.conf
      permissions: 0o644
      content: |
        [ NFSMount_Global_Options ]
        nfsvers=4.2
        hard=True
        nconnect=16
        noatime=True
  install:
    disk: /dev/vda
    image: factory.talos.dev/metal-installer/05b4a47a70bc97786ed83d200567dcc8a13f731b164537ba59d5397d668851fa:v1.11.2
    wipe: false
  kernel:
    modules:
      - name: nbd
  kubelet:
    defaultRuntimeSeccompProfileEnabled: true
    disableManifestsDirectory: true
    extraConfig:
      featureGates:
        ImageVolume: true
        ResourceHealthStatus: true
      serializeImagePulls: false
    image: ghcr.io/siderolabs/kubelet:v1.34.1
    nodeIP:
      validSubnets:
        - 10.2.128.1/17
  nodeLabels:
    topology.kubernetes.io/region: pve
  sysctls:
    fs.inotify.max_user_instances: "8192"
    fs.inotify.max_user_watches: "1048576"
    net.core.default_qdisc: fq
    net.core.rmem_max: "67108864"
    net.core.wmem_max: "67108864"
    net.ipv4.neigh.default.gc_thresh1: "4096"
    net.ipv4.neigh.default.gc_thresh2: "8192"
    net.ipv4.neigh.default.gc_thresh3: "16384"
    net.ipv4.tcp_congestion_control: bbr
    net.ipv4.tcp_fastopen: "3"
    net.ipv4.tcp_mtu_probing: "1"
    net.ipv4.tcp_rmem: 4096 87380 33554432
    net.ipv4.tcp_window_scaling: "1"
    net.ipv4.tcp_wmem: 4096 65536 33554432
    sunrpc.tcp_max_slot_table_entries: "128"
    sunrpc.tcp_slot_table_entries: "128"
    user.max_user_namespaces: "11255"
    vm.nr_hugepages: "1024"
  token: {{ ENV.TRUSTDINFO_TOKEN }}
cluster:
  ca:
    crt: {{ ENV.CERTS_K8S_CRT }}
    {% if ENV.IS_CONTROLLER | default(false) %}
    key: {{ ENV.CERTS_K8S_KEY }}
    {% endif %}
  clusterName: main
  controlPlane:
    endpoint: https://k8s.internal:6443
  discovery:
    enabled: true
    registries:
      kubernetes:
        disabled: true
      service:
        disabled: false
  id: {{ ENV.CLUSTER_ID }}
  network:
    cni:
      name: none
    dnsDomain: cluster.local
    podSubnets:
      - 10.42.0.0/16
    serviceSubnets:
      - 10.43.0.0/16
  secret: {{ ENV.CLUSTER_SECRET }}
  token: {{ ENV.SECRETS_BOOTSTRAPTOKEN }}
  {% if ENV.IS_CONTROLLER | default(false) %}
  aggregatorCA:
    crt: {{ ENV.CERTS_K8SAGGREGATOR_CRT }}
    key: {{ ENV.CERTS_K8SAGGREGATOR_KEY }}
  allowSchedulingOnControlPlanes: false
  apiServer:
    auditPolicy:
      apiVersion: audit.k8s.io/v1
      kind: Policy
      rules:
        - level: Metadata
    certSANs: *certSANs
    disablePodSecurityPolicy: true
    extraArgs:
      enable-aggregator-routing: "true"
      feature-gates: ImageVolume=true,MutatingAdmissionPolicy=true,ResourceHealthStatus=true
      runtime-config: admissionregistration.k8s.io/v1beta1=true
    image: registry.k8s.io/kube-apiserver:v1.34.1
  controllerManager:
    extraArgs:
      bind-address: 0.0.0.0
    image: registry.k8s.io/kube-controller-manager:v1.34.1
  coreDNS:
    disabled: true
  etcd:
    advertisedSubnets:
      - 10.2.128.1/17
    ca:
      crt: {{ ENV.CERTS_ETCD_CRT }}
      key: {{ ENV.CERTS_ETCD_KEY }}
    extraArgs:
      listen-metrics-urls: http://0.0.0.0:2381
  proxy:
    disabled: true
    image: registry.k8s.io/kube-proxy:v1.34.1
  scheduler:
    config:
      apiVersion: kubescheduler.config.k8s.io/v1
      kind: KubeSchedulerConfiguration
      profiles:
        - schedulerName: default-scheduler
          plugins:
            score:
              disabled:
                - name: ImageLocality
          pluginConfig:
            - name: PodTopologySpread
              args:
                defaultingType: List
                defaultConstraints:
                  - maxSkew: 1
                    topologyKey: kubernetes.io/hostname
                    whenUnsatisfiable: ScheduleAnyway
    extraArgs:
      bind-address: 0.0.0.0
    image: registry.k8s.io/kube-scheduler:v1.34.1
  secretboxEncryptionSecret: {{ ENV.SECRETS_SECRETBOXENCRYPTIONSECRET }}
  serviceAccount:
    key: {{ ENV.CERTS_K8SSERVICEACCOUNT_KEY }}
  {% endif %}
